@model IEnumerable<mvc.Models.adoptante>

@{
    ViewBag.Title = "Index";
}

<h2>Adoptante</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom_adoptante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cel_adoptante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dir_adoptante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ingresos_mensuales)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom_adoptante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cel_adoptante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dir_adoptante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ingresos_mensuales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_adoptante }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_adoptante }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_adoptante })
        </td>
    </tr>
}

</table>
